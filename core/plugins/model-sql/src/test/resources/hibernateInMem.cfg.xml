<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:test</property>
        <property name="hibernate.connection.username">sa</property><!-- default username -->
        <property name="hibernate.connection.password"/><!-- default blank password -->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property><!-- creates the tables from the mapped entities automatically -->
        <property name="hibernate.connection.pool_size">10</property>
        <property name="hibernate.connection.autocommit">true</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <mapping class="io.lumify.sql.model.user.SqlUser"/>
        <mapping class="io.lumify.sql.model.workspace.SqlWorkspace"/>
        <mapping class="io.lumify.sql.model.workspace.SqlWorkspaceUser"/>
        <mapping class="io.lumify.sql.model.workspace.SqlWorkspaceUserId"/>
        <mapping class="io.lumify.sql.model.workspace.SqlWorkspaceVertex"/>
        <mapping class="io.lumify.sql.model.notification.SqlSystemNotification"/>
        <mapping class="io.lumify.sql.model.notification.SqlUserNotification"/>
        <mapping class="io.lumify.sql.model.longRunningProcess.SqlLongRunningProcess"/>
    </session-factory>
</hibernate-configuration>
