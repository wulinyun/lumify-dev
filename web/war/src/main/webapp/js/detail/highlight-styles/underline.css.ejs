border-bottom-style: solid;
border-bottom-width: 1px;
<% if (state === STATES.NORMAL) { %>
border-bottom-color: <%= colorjs(concept.color).setAlpha(1.0) %>;
<% } else if (state == STATES.DIM) { %>
border-bottom-color: <%= colorjs(concept.color).setAlpha(0.2).setSaturation(0.2) %>;
<% } else if (state == STATES.HOVER) { %>
background: <%= colorjs(concept.color).setAlpha(0.3) %>;
<% } else if (state == STATES.TERM) { %>
border-bottom-color: #333;
border-bottom-style: dotted;
<% } %>
