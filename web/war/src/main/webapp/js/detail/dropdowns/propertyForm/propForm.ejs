<div class="form">
  <div class="errors"></div>

  <% if (!vertex) { %>
  <div class="vertex-select-container"></div>
  <% } %>
  <% if (!property) { %>
  <div class="property-list"></div>
  <% } %>

  <div class="previous-values-container">
    <div class="previous-values" style="display:none;">
      <button data-action="add"><%= i18n('property.form.button.add') %></button>
      <button data-action="edit" class="edit-previous"><%= i18n('property.form.button.edit') %> (<span></span>) <small>&#x25BC;</small></button>
    </div>
    <ul class="dropdown-menu" style="display:none"></ul>
  </div>

  <div class="configuration"></div>
  <div class="justification"></div>
  <div class="visibility"></div>

  <div class="buttons">
    <button class="btn btn-small btn-danger"><%= i18n('property.form.button.delete') %></button>
    <button class="btn btn-link btn-small cancel"><%= i18n('property.form.button.cancel') %></button>
    <button class="btn btn-small btn-primary"><%= i18n('property.form.button.add') %></button>
  </div>
</div>
