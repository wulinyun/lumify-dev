<input 
  data-provide="datepicker"
  placeholder="{{today}}"
  value="{{dateString}}"
  type="text"
  pattern="\d{4}-\d+-\d+"
  required="required" 
  class="span1"
  style="width: 55%; border-top-right-radius: 0; border-bottom-right-radius: 0; box-sizing: border-box; margin: 0;">

  <input type="text"
    placeholder="{{todayTime}}"
    pattern="\d+:\d+"
    required="required" 
    class="span1 timepicker"
    style="border-radius: 0;width: 45%; box-sizing: border-box; margin: 0; margin-left: -1px;">
