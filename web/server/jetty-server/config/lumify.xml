<?xml version="1.0"  encoding="ISO-8859-1"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<Configure class="org.eclipse.jetty.webapp.WebAppContext">
    <Set name="contextPath">/</Set>
    <Set name="war">/opt/jetty/webapps/lumify.war</Set>

    <New id="sessionManager"
         class="io.lumify.web.session.LumifyBigTableJettySessionManager"/>
    <Get id="server" name="server"/>

    <Set name="sessionHandler">
        <New class="com.altamiracorp.bigtable.jetty.BigTableSessionHandler">
            <Arg>
                <Ref id="sessionManager"/>
            </Arg>
        </New>
    </Set>

    <Ref id="server">
        <Set name="sessionIdManager">
            <New class="com.altamiracorp.bigtable.jetty.BigTableJettySessionIdManager">
                <Arg>
                    <Ref id="server"/>
                </Arg>
                <Arg>
                    <Ref id="sessionManager"/>
                </Arg>
            </New>
        </Set>
    </Ref>
</Configure>
